{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "outDir": "./build"
  },
  "include": [
    "./app/**/*"
  ],
  "exclude": [
    "node_modules",
    "./app/tests/**/*"
  ]
}
